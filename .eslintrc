{
	"extends": ["plugin:flowtype/recommended", "plugin:react/recommended", "standard"],
	"parser": "babel-eslint",
	"plugins": ["react", "babel", "flowtype"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true,
			"modules": true
		}
	},
	"globals": {
		"Raven": true
	},
	"env": {
		"browser": true,
		"amd": true,
		"es6": true,
		"node": true,
		"jest": true
	},
	"rules": {
		"no-tabs": 0,
		"no-unused-vars": 1,
		"indent": [2, "tab"]
	}
}
